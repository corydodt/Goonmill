<span id="count-#{id}" style="display:none"/><script type="text/javascript">
var value = '#{quote_safe_value}';
var mySpan = document.getElementById("count-#{id}");
var staticParent = mySpan.parentNode;
if (parseInt(value) > 1) {
    var content = "(" + value + ")";
} else {
    var content = "&#xA0;";
}
staticParent.update(content); // yeee---ikes.
</script>
